<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Trip</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #2c3e50; /* Dark background */
      color: #ecf0f1; /* Light text color */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 20px;
    }

    h1 {
      font-size: 2.5rem;
      color: #ffd700; /* Gold color for the title */
      margin-bottom: 1.5rem;
    }

    form {
      background-color: #34495e; /* Dark form background */
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 600px;
    }

    label {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
      display: block;
      color: #ecf0f1; /* Light label text */
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 1rem;
      border: 1px solid #7f8c8d;
      border-radius: 8px;
      background-color: #1e272e; /* Dark input field background */
      color: #ecf0f1; /* Light text in input */
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    button {
      background-color: #ffd700; /* Gold button */
      color: #1e272e; /* Dark text on button */
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: bold;
      transition: background-color 0.3s ease, transform 0.3s ease;
    }

    button:hover {
      background-color: #f39c12; /* Darker gold on hover */
      transform: translateY(-2px);
    }

    button:active {
      background-color: #e67e22; /* Darker color on click */
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      h1 {
        font-size: 2rem;
      }

      form {
        padding: 1.5rem;
      }

      label, input, textarea {
        font-size: 1rem;
      }

      button {
        font-size: 1.1rem;
        padding: 10px 15px;
      }
    }
  </style>
</head>
<body>

  <h1>Update Trip</h1>
  
  <!-- Update Trip Form -->
  <form action="/admin/update-trip/<%= trip._id %>" method="POST">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= trip.title %>" required>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= trip.description %></textarea>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="<%= trip.price %>" required>

    <label for="startDate">Start Date:</label>
    <input type="date" id="startDate" name="startDate" value="<%= trip.startDate.toISOString().split('T')[0] %>" required>

    <label for="endDate">End Date:</label>
    <input type="date" id="endDate" name="endDate" value="<%= trip.endDate.toISOString().split('T')[0] %>" required>

    <label for="imageUrl">Image URL:</label>
    <input type="text" id="imageUrl" name="imageUrl" value="<%= trip.imageUrl %>" required>

    <label for="totalSeats">Total Seats:</label>
    <input type="number" id="totalSeats" name="totalSeats" value="<%= trip.totalSeats %>" required>

    <label for="numberOfSeatsLeft">Seats Left:</label>
    <input type="number" id="numberOfSeatsLeft" name="numberOfSeatsLeft" value="<%= trip.numberOfSeatsLeft %>" required>

    <button type="submit">Update Trip</button>
  </form>

</body>
</html>
