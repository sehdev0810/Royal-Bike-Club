<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Trips</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    /* Reset and Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #3498db, #8e44ad);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
      min-height: 100vh;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      color: #ffd700;
      text-align: center;
    }

    table {
      width: 80%;
      margin-top: 2rem;
      border-collapse: collapse;
      background-color: #2c3e50;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 15px;
      text-align: left;
      font-size: 1.1rem;
    }

    th {
      background-color: #34495e;
      color: #fff;
    }

    td {
      background-color: #1e272e;
      color: #fff;
    }

    td img {
      border-radius: 8px;
      width: 100px;
      height: 60px;
      object-fit: cover;
    }

    tr:nth-child(even) {
      background-color: #34495e;
    }

    tr:hover {
      background-color: #1abc9c;
      color: #fff;
    }

    .view-details-button, .update-button, .delete-button {
      background-color: #ffd700;
      color: #1e272e;
      border: none;
      padding: 10px 20px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: bold;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      margin-right: 10px;
    }

    .view-details-button:hover, .update-button:hover, .delete-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(255, 215, 0, 0.3);
    }

    .view-details-button:hover {
      background-color: #1e272e;
      color: #ffd700;
    }

    .update-button:hover {
      background-color: #2980b9;
      color: #fff;
    }

    .delete-button:hover {
      background-color: #e74c3c;
      color: #fff;
    }

    a {
      text-decoration: none;
      color: #fff;
      background: #1e272e;
      padding: 10px 30px;
      border-radius: 8px;
      font-size: 1.2rem;
      font-weight: bold;
      margin-top: 2rem;
      border: 2px solid #ffd700;
      transition: background 0.3s ease, transform 0.3s ease;
    }

    a:hover {
      background: #ffd700;
      color: #1e272e;
      transform: scale(1.1);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      table {
        width: 100%;
      }

      h1 {
        font-size: 2rem;
      }

      td img {
        width: 80px;
        height: 50px;
      }

      th, td {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>

  <h1>Trips List</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Actions</th> <!-- Removed description column -->
      </tr>
    </thead>
    <tbody>
      <% trips.forEach(trip => { %>
        <tr>
          <td><%= trip.title %></td>
          <td>
            <!-- View More Details button -->
            <button class="view-details-button" onclick="window.location.href='/admin/view-trip/<%= trip._id %>'">View More Details</button>

            <!-- Update Trip button -->
            <button class="update-button" onclick="window.location.href='/admin/update-trip/<%= trip._id %>'">Update Trip</button>

            <!-- Delete Trip button -->
            <form action="/admin/delete-trip/<%= trip._id %>" method="POST" style="display:inline;">
              <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this trip?')">Delete Trip</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/admin/dashboard">Back to Dashboard</a>

</body>
</html>
